    <div class="alert alert-danger">
        {{texto}}
    </div>

{{else}}

{{/each}}

<div class="card p-4">
    <div class="card-body">
        <h1 class="display-5">Crie uma conta: </h1>
        <hr>
        <form action="/usuarios/registrar" method="POST">
            <label for="nome" class="form-label mt-4">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control">
            <label for="email" class="form-label mt-3">E-mail: </label>
            <input type="email" name="email" id="email" class="form-control">
            <label for="senha" class="form-label mt-3">Senha: </label>
            <input type="password" name="senha" id="senha" class="form-control">
            <button type="submit" class="btn btn-success mt-4">Registrar</button>
        </form>
    </div>
</div>