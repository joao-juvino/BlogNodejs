{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>

{{else}}

{{/each}}

<div class="card p-4">
    <div class="card-body">
        <h1 class="my-2 display-5">Nova postagem: </h1>
        <hr>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="mb-1 mt-3">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form-control">
            <label for="slug" class="mb-1 mt-3">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control">
            <label for="descricao" class="mb-1 mt-3">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control">
            <label for="conteudo" class="mb-1 mt-3">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="5" class="form-control"></textarea>
            <label for="categoria" class="mb-1 mt-3 form-label">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-md btn-success mt-4 px-5 py-2">Criar postagem</button>
        </form>
    </div>
</div>